- model_class = Person
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @person.first_name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @person.last_name
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @person.email
%p
  %strong= model_class.human_attribute_name(:job) + ':'
  %br
  = @person.job
%p
  %strong= model_class.human_attribute_name(:bio) + ':'
  %br
  = @person.bio
%p
  %strong= model_class.human_attribute_name(:gender) + ':'
  %br
  = @person.gender
%p
  %strong= model_class.human_attribute_name(:birth_date) + ':'
  %br
  = @person.birth_date
%p
  %strong= model_class.human_attribute_name(:picture) + ':'
  %br
  = @person.picture


= link_to t('.back', :default => t("helpers.links.back")), people_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_person_path(@person), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), person_path(@person), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
