- model_class = Person
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:first_name)
      %th= model_class.human_attribute_name(:last_name)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:job)
      %th= model_class.human_attribute_name(:bio)
      %th= model_class.human_attribute_name(:gender)
      %th= model_class.human_attribute_name(:birth_date)
      %th= model_class.human_attribute_name(:picture)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @people.each do |person|
      %tr
        %td= link_to person.id, person_path(person)
        %td= person.first_name
        %td= person.last_name
        %td= person.email
        %td= person.job
        %td= person.bio
        %td= person.gender
        %td= person.birth_date
        %td= person.picture
        %td=l person.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_person_path(person), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), person_path(person), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_person_path, :class => 'btn btn-primary'
