- model_class = Person
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th=t '.full_name', :default => t("person.full_name")
      %th= model_class.human_attribute_name(:email)
      %th=t '.age', :default => t("helpers.age")
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @people.each do |person|
      %tr
        %td= link_to "#{person.first_name} #{person.last_name}", person_path(person)
        %td= person.email
        %td= age(person.birth_date)
        %td
          = link_to t('.destroy', :default => t("helpers.links.destroy")), person_path(person), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_person_path, :class => 'btn btn-primary'
